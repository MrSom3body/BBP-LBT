$TTL    1h
$ORIGIN {{ domain_name }}.
@       IN      SOA     lin-server.{{ domain_name }}. hostmaster.{{ domain_name }}. (
                        1        ; Serial
                        3h       ; Refresh
                        1h       ; Retry
                        1w       ; Expire
                        1h )     ; Negative Cache TTL

        IN      NS      lin-server.{{ domain_name }}.

lin-server  IN      A       {{ server_ip }}
lin-router  IN      A       {{ router_ip }}
lin-client  IN      A       {{ client_ip }}
